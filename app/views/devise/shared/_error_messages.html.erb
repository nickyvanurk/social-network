<% if resource.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.details.keys.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h4>
    <ul>
      <% resource.errors.details.keys.each do |attr| %>
        <li><%= resource.errors.full_messages_for(attr).first %></li>
      <% end %>
    </ul>
  </div>
<% end %>
